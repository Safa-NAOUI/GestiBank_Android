<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:gravity="center|top"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Welcome to the application GestiBank" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_app"
            android:layout_marginTop="30dp"
            />


        <Button
            android:id="@+id/btn_sign_in_authentification"
            style="@style/button"
            android:text="@string/sign_in" />

        <Button
            android:id="@+id/btn_sign_up_authentification"
            style="@style/button"
            android:text="@string/sign_up"/>

        <Button
            android:id="@+id/btn_currency_authentification"
            style="@style/button"
            android:text="@string/menu_currency"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>